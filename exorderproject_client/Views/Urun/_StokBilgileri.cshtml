@using exorderproject_core;
@model List<exorderproject_core.DTO.STOK>
@{
    Layout = null;
}
<div class="row justify-content-start">
    <div class="col-lg-9 col-12">


        <div class="row">
            <div class="col-lg-12 mb-3">
                <section class="card">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-12">
                                <table class="table table-bordered table-hover table-striped table-sm mb-0" id="datatable-tabletools">
                                    <thead>
                                        <tr>

                                            <th>
                                                @Html.DisplayName("Eski Stok")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Stok")
                                            </th>

                                            <th>
                                                @Html.DisplayName("Yeni Stok")
                                            </th>
                                            <th>
                                                @Html.DisplayName("Stok Durum")
                                            </th>
                                            <th>
                                                @Html.DisplayName("İşlem Tarihi")

                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model.OrderByDescending(m => m.STOCK_ID))
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.STOCK_OLD_QUANTITY)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.STOCK_QUANTITY)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.STOCK_CURRENT_QUANTITY)
                                                </td>
                                                <td>
                                                    @if (item.STOCK_TYPE == 1)
                                                    {
                                                        <span>Stok eklendi</span>
                                                    }
                                                    else
                                                    {
                                                        <span>Stok düşüldü</span>
                                                    }
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem=>item.STOCK_CREATED_DATE)

                                                </td>
                                                <td onclick="document.location = '/urun/stokdel/@item.STOCK_ID'" style="cursor: pointer"> Sil</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>


    </div>
</div>