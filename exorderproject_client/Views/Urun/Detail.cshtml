
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="page-header">
    <h2>ÜRÜN DETAY</h2>
    <div class="right-wrapper text-right pr-3 pt-2">
        <a href="/urun/liste" class="btn btn-danger btn-sm text-light"><i class="fa fa-chevron-left mr-2"></i>Ürün Listesi</a>
    </div>
</header>
<div class="row">
    <div class="col-lg-12 mb-3">
        <section class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="tabs tabs-primary">
                            <ul class="nav nav-tabs">
                                <li class="nav-item active">
                                    <a class="nav-link tabMenuItem" href="#genel" data-toggle="tab" data-url="@Url.Action("_Genel","Urun", new { id = ViewBag.ID})">Genel Bilgiler</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link tabMenuItem" href="#sirketcalisani" data-toggle="tab" data-url="@Url.Action("_TedBilgileri","Urun", new { id = ViewBag.ID})">Tedarikçi Bilgileri</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link tabMenuItem" href="#urunstoklist" data-toggle="tab" data-url="@Url.Action("_StokBilgileri","Urun", new { id = ViewBag.ID})">Stok Bilgileri</a>
                                </li>
                            </ul>
                            <div class="tab-content">
                                <div id="tabContent" class="tab-pane active">
                                    @Html.Action("_Genel", "Urun")
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
</div>

