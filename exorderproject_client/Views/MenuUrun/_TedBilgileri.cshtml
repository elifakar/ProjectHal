@using exorderproject_core;
@model exorderproject_core.DTO.URUN
@{
    Layout = null;
}
<div class="row justify-content-start">
    <div class="col-lg-9 col-12">
        @using (Ajax.BeginForm("EditF", "Urun", new { updateCode = UpdateCodes.URUN_TEDARIKCI.GetHashCode() }, new AjaxOptions { HttpMethod = "POST", OnSuccess = "Success", UpdateTargetId = "myForm", InsertionMode = InsertionMode.Replace }, new { id = "myForm", role = "form" }))
        {
            @Html.AntiForgeryToken()
        <div class="row form-group">
            <div class="col-lg-3 col-6">
                <div class="form-group">
                    <label class="col-form-label"><b>Tedarikçi Firma </b></label>
                    @Html.TextBoxFor(m => m.PRODUCT_SUPPLIER_COMPANY, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="form-group">
                    <label class="col-form-label"><b>Yetkili</b></label>
                    @Html.TextBoxFor(m => m.PRODUCT_SUPPLIER_NAME, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="form-group">
                    <label class="col-form-label"><b>Adres</b></label>
                    @Html.TextBoxFor(m => m.PRODUCT_SUPPLIER_ADDRESS, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-lg-3 col-6">
                <div class="form-group">
                    <label class="col-form-label"><b>Telefon</b></label>
                    @Html.TextBoxFor(m => m.PRODUCT_SUPPLIER_PHONE, new { @class = "form-control" })
                </div>
            </div>
        </div>
            <div class="row form-group">
                <div class="col-lg-12 text-right">
                    @Html.HiddenFor(m => m.PRODUCT_C_ID)
                    @Html.HiddenFor(m => m.PRODUCT_ID)
                    <button class="btn btn-primary" type="submit">Kaydet</button>
                </div>
            </div>
        }
    </div>
</div>