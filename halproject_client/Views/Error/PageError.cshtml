
@{
    ViewBag.Title = "Hata " + Response.StatusCode;
    Layout = "~/Views/Shared/_RaporLayout.cshtml";
}

<section class="body-error error-outside bg-light">
    <div class="center-error">
        <div class="error-header">
            <div class="row">
                <div class="col-md-12">
                    <div class="row justify-content-center">
                        <div class="col-lg-8 text-center">
                            <a href="/" class="logo">
                                <img src="~/Content/img/logo1.png" alt="Hal Project" />
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8">
                <div class="main-error mb-3">
                    <h2 class="error-code text-dark text-center font-weight-semibold m-0">@Response.StatusCode <i class="fas fa-file"></i></h2>
                    @if (Response.StatusCode == 403)
                    {
                        <p class="error-explanation text-center">Erişmeye çalıştığınız sayfa için yetkiniz bulunmamaktadır.</p>
                    }
                    else if (Response.StatusCode == 404)
                    {
                        <p class="error-explanation text-center">Erişmeye çalıştığınız sayfa bulunamadı.</p>
                    }
                    else if (Response.StatusCode == 500)
                    {
                        <p class="error-explanation text-center">Servis hatası. Exorder ile iletişime geçiniz.</p>
                    }
                </div>
            </div>
            <div class="col-lg-4">
                <h4 class="text">Diğer bağlantılar...</h4>
                <ul class="nav nav-list flex-column primary">
                    <li class="nav-item">
                        <a class="nav-link" href="/"><i class="fas fa-caret-right text-dark"></i> Ana Sayfa</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/profil"><i class="fas fa-caret-right text-dark"></i> Profilim</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/sss"><i class="fas fa-caret-right text-dark"></i> Sık Sorulan Sorular</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>