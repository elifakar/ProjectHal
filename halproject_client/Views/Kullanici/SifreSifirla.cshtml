@model halproject_core.Models.ResetPassword
@{
    ViewBag.Title = "Şifre Sıfırla";
    Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<section class="row justify-content-center px-2 pt-3 mt-lg-5">
    <div class="col-lg-4">
        <div class="center-sign">
            <div class="text-center">
                <a href="/">
                    <img src="~/Content/img/logo1.png" alt="" />
                </a>
            </div>
            <section class="body-sign">
                <div class="center-sign">
                    <div class="panel card-sign">
                        <div class="card-title-sign text-center">
                            <h1 class="title text-uppercase font-weight-bold m-0 py-1 px-5" style="font-size: 18px">ŞİFRE SIFIRLA</h1>
                        </div>
                        <div class="card-body">
                            @using (Ajax.BeginForm("SifreSifirlaF", "Kullanici", new AjaxOptions { HttpMethod = "POST", OnSuccess = "Success", UpdateTargetId = "myForm", InsertionMode = InsertionMode.Replace }, new { id = "myForm", role = "form", autocomplete = "off" }))
                            {
                                @Html.AntiForgeryToken()
                                <div class="form-group mb-3">
                                    <label>Yeni Şifre</label>
                                    @Html.TextBoxFor(m => m.YENISIFRE, new { @class = "form-control", type = "password" })
                                </div>
                                
                                <div class="form-group mb-3">
                                    <label>Yeni Şifre (Tekrar)</label>
                                    @Html.TextBoxFor(m => m.YENISIFRE_TEKRAR, new { @class = "form-control", type = "password" })
                                </div>

                                <div class="row justify-content-end">
                                    <div class="col-lg-4">
                                        @Html.HiddenFor(m => m.GUID)
                                        <button type="submit" class="btn btn-primary btn-block mt-2">Şifre Sıfırla</button>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <p class="text-center text-muted mt-3 mb-3">&copy; Copyright 2017. All Rights Reserved.</p>
                </div>
            </section>
        </div>
    </div>
</section> 